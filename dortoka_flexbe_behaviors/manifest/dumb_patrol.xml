<?xml version="1.0" encoding="UTF-8"?>

<behavior name="dumb_patrol">

	<executable package_path="dortoka_flexbe_behaviors.dumb_patrol_sm" class="dumb_patrolSM" />
	<tagstring></tagstring>
	<author>xabi</author>
	<date>Mon Jun 14 2021</date>
	<description>
		The robot will execute a patrol behavior, searching for the longest path it can find.
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="numeric" name="turning_angle" default="0" label="turning_angle" hint="Sets the turning_angle">
			<min value="-90" />
			<max value="90" />
		</param>

		<param type="numeric" name="turning_speed" default="0.4" label="turning_speed" hint="Sets the turning_speed">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="drive_speed" default="0.4" label="drive_speed" hint="Sets the drive_speed">
			<min value="0" />
			<max value="5" />
		</param>

		<param type="numeric" name="travel_distance" default="4" label="travel_distance" hint="Sets the travel_distance">
			<min value="0" />
			<max value="10" />
		</param>

		<param type="numeric" name="obstacle_distance" default="0" label="obstacle_distance" hint="Sets the obstacle_distance">
			<min value="0" />
			<max value="1" />
		</param>

	</params>


</behavior>